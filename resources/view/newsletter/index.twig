{% extends '_partials/index.twig' %}

{% block head %}
    {{ parent() }}

    {{ css.inline('resources/css/blog.scss')|raw }}
    {{ css.inline('resources/css/overview.scss')|raw }}
{% endblock %}

{% block content %}

    <article>
        <h1>
            <span>
                stitcher.io newsletter
            </span>
        </h1>

        <p>Do you want to receive occasional mails about what's going on on this blog? Feel free to leave behind your email address!</p>

        <form action="https://mail.stitcher.io/subscribe/81fa83d0-4a0b-4eff-b897-f6ce51dfb7f0" method="post">
            <div>
                <label for="email">Email</label>
                <input name="email" style="margin-left:.5em;"/>
            </div>

            <div style="margin-left:1em;">
                <button type="submit" class="cta cta-small">Subscribe</button>
            </div>
        </form>

        <p><br>You'll receive a confirmation mail shortly after, make sure to check your spam if it doesn't show up within 2 minutes.</p>
    </article>

{% endblock %}
