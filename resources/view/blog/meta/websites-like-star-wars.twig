{% extends 'blog/meta.twig' %}

{% block content %}
    <style>
        img {
            top: -40px;
            left:-30px;
            box-shadow: none;
        }

        .meta-container {
            background: #000;
        }

        .star-wars {

            display: flex;
            justify-content: center;

            height: 500px;
            perspective: 250px;

            font-family: 'Pathway Gothic One', sans-serif;
            font-size: 500%;
            font-weight: 600;
            letter-spacing: 6px;
            line-height: 150%;
            text-align: justify;
        }

        .crawl {
            position: relative;
            transform-origin: 50% 100%;
            transform: rotateX(20deg);
            width: 100%;
        }

        h1 {
            margin-top: 140px;
            background: none;
            color: #feda4a;
            font-size: .8em;
        }

        h1 small {
            font-size: .6em;
        }

        img {
            box-shadow: none;
            opacity: 50%;
        }
    </style>

    <div class="meta-container">
        <img src="{{ source('blog/meta/img/star-wars.txt') }}"/>

        <div class="star-wars">
            <div class="crawl">
                <h1>
                    Websites should be
                    <br>
                    more like Star Wars
                    <br>
                    <br>
                    <small>
                        stitcher.io
                    </small>
                </h1>
            </div>
        </div>
    </div>
{% endblock %}
